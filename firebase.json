{
  "hosting": {
    "site": "tutorbook-greene",
    "public": "build/",
    "ignore": [
      "**/*.log",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "functions": {
    "source": "firebase/functions"
  },
  "emulators": {
    "firestore": {
      "port": 8080
    }
  },
  "storage": {
    "rules": "firebase/storage.rules"
  }
}
